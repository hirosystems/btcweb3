{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "allowSyntheticDefaultImports": true,
    // Modules
    "baseUrl": ".",
    "module": "preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@crypto/*": ["src/crypto/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true,
    // Emit
    "noEmit": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Language and Environment
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ESNext",

    // Completeness
    "skipLibCheck": true
  },
  "include": ["src", "leather-styles", "theme", "panda.config.ts", "vite.config.ts", "global.d.ts"]
}
